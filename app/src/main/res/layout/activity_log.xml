<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.songcream.main.LogActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="#ffffff"
        app:tabIndicatorHeight="0dp"
        android:paddingTop="25dp"
        app:tabMode="fixed"
        app:tabTextColor="#cccccc"
        android:background="#2980b9">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabLayout">

    </android.support.v4.view.ViewPager>

    <com.songcream.widget.FloatingButtonLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingButton_logFilter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"
            android:visibility="gone"
            android:src="@android:drawable/ic_menu_agenda"
            app:backgroundTint="#2980b9"
            app:rippleColor="#e7d16b"
            android:elevation="50dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingButton_connect"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"
            android:src="@android:drawable/ic_menu_manage"
            app:backgroundTint="#2980b9"
            app:rippleColor="#e7d16b"
            android:elevation="50dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingButton_clear"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"
            android:src="@android:drawable/ic_menu_delete"
            app:backgroundTint="#2980b9"
            app:rippleColor="#e7d16b"
            android:elevation="50dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingButton_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"
            android:src="@android:drawable/ic_menu_add"
            app:backgroundTint="#2980b9"
            app:rippleColor="#e7d16b"
            android:elevation="50dp"/>


    </com.songcream.widget.FloatingButtonLayout>

</RelativeLayout>